---
import {type IDefaultComponentProps} from "@types";
const {title, data} = Astro.props as IDefaultComponentProps;
---
<section class="py-16 sm:py-20">
    <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
        <div class="flex flex-col gap-12 sm:gap-16">
            <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">{title}</h2>
            <div class="grid gap-8 lg:grid-cols-3">
                {
                    data.map((card: any) => (
                            <div class="bg-primary-500/10 dark:bg-primary-400/10 flex flex-col gap-12 rounded-3xl px-6 py-8">
                               <p class="text-md"> <b class="text-sm text-secondary">|  </b>{card.id}</p>
                                <div class="flex flex-col gap-4">
                                    <h3 class="text-xl font-medium">{card.name}</h3>
                                    <p class="text-primary-950/70 dark:text-primary-200/70 text-base sm:text-lg">
                                        {card.description || ''}
                                    </p>
                                    {card.tags?.length > 0 && (
                                        <ul class="flex flex-wrap gap-2">
                                            {card.tags.map((tag: string) => (
                                                <li key={tag} class="bg-secondary text-white px-3 py-1 rounded-full">
                                                    {tag}
                                                </li>
                                            ))}
                                        </ul>
                                    )}
                                </div>
                            </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>
