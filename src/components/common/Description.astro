---
import {type IDefaultComponentProps} from "@types";
const {title, data} = Astro.props as IDefaultComponentProps;
---

<section class="py-16 sm:py-20">
    <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
        <div class="grid gap-12 lg:grid-cols-3 lg:gap-8">
            <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">{title}</h2>
            <div class="flex flex-col items-start gap-8 sm:gap-10 lg:col-span-2">
                {Array.isArray(data) && data.map((paragraph: string, index: number) => (
                        <p key={index} class="text-primary-950/70 dark:text-primary-200/70 text-base sm:text-lg">
                            {paragraph}
                        </p>
                ))}
            </div>
        </div>
    </div>
</section>