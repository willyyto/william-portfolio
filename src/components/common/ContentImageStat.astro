---
import { type IDefaultComponentProps } from "@types";
const { data, flipOrder } = Astro.props as IDefaultComponentProps & { flipOrder: boolean };
---
<section class="py-16 sm:py-20 bg-gray-100 dark:bg-gray-800">
  <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="grid gap-16 lg:grid-cols-2 lg:gap-24">
      <div class={`flex flex-col gap-10 ${flipOrder ? 'order-1 lg:order-2' : 'order-2 lg:order-1'}`}>
        <div class="space-y-8 sm:space-y-12">
          <h2 class="text-4xl font-semibold tracking-tighter sm:text-5xl text-indigo-600 dark:text-indigo-400">{data.title}</h2>
          <div class="space-y-6 text-gray-700 dark:text-gray-300">
            {Array.isArray(data.description) && data.description.map((paragraph: string, index: number) => (
              <p key={index} class="text-lg sm:text-xl">
                {paragraph}
              </p>
            ))}
          </div>
          <a
            href={data.buttonUrl}
            class="bg-secondary hover:bg-secondaryhover focus-visible:outline-secondaryhover inline-flex items-center justify-center rounded-full border border-transparent px-5 py-3 text-base font-medium text-white transition focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2"
          >
            {data.buttonText || 'Read Article'}
          </a>
        </div>

        {Array.isArray(data.stats) && (
          <dl class="grid grid-cols-1 gap-6 sm:grid-cols-2">
            {data.stats.map((stat: any, index: number) => (
              <div key={index} class="border-gray-200 dark:border-gray-700 rounded-xl border p-6 shadow-sm">
                <dt class="text-base font-medium">{stat.name}</dt>
                <dd class="text-3xl font-semibold">{stat.value}</dd>
              </div>
            ))}
          </dl>
        )}
      </div>

      <img
        class={`mx-auto w-full max-w-xl rounded-3xl shadow-xl transition-transform duration-300 hover:scale-105 ${flipOrder ? 'order-2 lg:order-1' : 'order-1 lg:order-2'}`}
        src={data.imageUrl}
        alt="Our experts working together"
      />
    </div>
  </div>
</section>

</section>
