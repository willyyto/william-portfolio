---
import {type IExperiences} from "@types";
import ProjectsExperience from '@components/experience/ProjectsExperience.astro';
import ScrollAnimationWrapper from '@components/common/ScrollAnimationWrapper.astro';
const {title, data} = Astro.props as IExperiences;
---
<section class="py-0 sm:py-0">
    <div class="mx-auto max-w-2xl px-4 sm:px-6 sm:py-0  lg:max-w-7xl lg:px-8">
        <ScrollAnimationWrapper>
            <section>
                <h3 class="py-2  dark:text-light text-3xl font-bold"
                    style="line-height: 1.2; font-size: 2rem;">{title}</h3>
            </section>
        </ScrollAnimationWrapper>
        <section class="flex items-start justify-between flex-col sm:flex-row dark:text-light">
            <div class="w-full">
                {
                    data.map((item) => (
                            <div class="my-8">
                                <ScrollAnimationWrapper>
                                    <div class="flex justify-between items-center flex-wrap">
                                        <h3 class="text-2xl font-semibold">{item.name}</h3>
                                        <p class="text-sm dark:text-background-color">
                                            {item.startDate} - {item.endDate}
                                        </p>
                                    </div>
                                    <p class="text-sm font-semibold mt-3 text-locationblue">{item.location}</p>

                                    <p class="text-md font-semibold mt-3">{item.description}</p>
                                </ScrollAnimationWrapper>
                                <div class="mt-3">
                                    <ProjectsExperience data={item.projects}/>
                                </div>
                            </div>
                    ))
                }
            </div>
        </section>
    </div>
</section>



