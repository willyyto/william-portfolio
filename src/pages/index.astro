---
import Description from '@components/common/Description.astro';
import Accordion from '@components/common/Accordion.astro';
import Hero from '@components/home/Hero.astro';
import Cards from '@components/common/Cards.astro';
import Jumbotron from '@components/common/Jumbotron.astro';

import Layout from '@layouts/Layout.astro';
import {data} from '@data';
import ScrollAnimationWrapper from '@components/common/ScrollAnimationWrapper.astro';
---

<Layout description="" title={"Home Â· " + data.name}>
    <ScrollAnimationWrapper>
        <Hero description="Lorem ipsum, dolor sit amet consectetur adipisicing elit. Maiores impedit perferendis suscipit eaque, iste dolor cupiditate blanditiis ratione."
              data={data} btn_name="Download CV" btn_href="https://www.williamto.com/assets/files/resume.pdf"/>
    </ScrollAnimationWrapper>
    <ScrollAnimationWrapper>
        <Cards title="Transferrable Skills" data={data.transferableskills}/>
    </ScrollAnimationWrapper>
    <ScrollAnimationWrapper>
        <Accordion title="Expertise" data={data.expertise}/>
    </ScrollAnimationWrapper>
    <ScrollAnimationWrapper>
        <Description title="About" data={data.about}/>
    </ScrollAnimationWrapper>
    <ScrollAnimationWrapper>
        <Jumbotron title="Connect with Me"
                   description="I'm always interested in new opportunities and collaborations. Feel free to reach out if you have questions, want to discuss potential projects, or simply connect. I look forward to hearing from you!"
                   btn_name="Contact Now" btn_href="/contact"/>
    </ScrollAnimationWrapper>
</Layout>
