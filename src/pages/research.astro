---
import Heading from '@components/common/Heading.astro';
import ContentImageStat from '@components/common/ContentImageStat.astro';
import Jumbotron from '@components/common/Jumbotron.astro';
import UnalignCards from '@components/common/UnalignCards.astro';
import Layout from '@layouts/Layout.astro';
import ScrollAnimationWrapper from '@components/common/ScrollAnimationWrapper.astro';
import {data} from '@data';

---

<Layout description="Research" title={"Research Â· " + data.name}>
    <ScrollAnimationWrapper>
        <Heading title="Research" description="Scholarly Contributions and Publications"/>
    </ScrollAnimationWrapper>
    <ScrollAnimationWrapper>
        <ContentImageStat data={data.research[0]} flipOrder={false}/>
    </ScrollAnimationWrapper>
    <ScrollAnimationWrapper>
        <ContentImageStat data={data.research[1]} flipOrder={true}/>
    </ScrollAnimationWrapper>
    <ScrollAnimationWrapper>
        <UnalignCards title="Key Achievements and Capabilities" data={data.researchachievements}/>
    </ScrollAnimationWrapper>
    <ScrollAnimationWrapper>
        <Jumbotron title="Connect with Me"
                   description="I'm always interested in new opportunities and collaborations. Feel free to reach out if you have questions, want to discuss potential projects, or simply connect. I look forward to hearing from you!"
                   btn_name="Contact Now" btn_href="/contact"/>
    </ScrollAnimationWrapper>
</Layout>
